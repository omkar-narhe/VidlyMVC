@model Vidly5.Models.Movies
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.GenreName</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.Value.ToShortDateString()</li>
    <li>Number in Stocks: @Model.NumberInStocks</li>
</ul>

